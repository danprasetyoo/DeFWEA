pipeline {
    agent any

    environment {
        BACKEND_URL = 'http://localhost:5000'
        FRONTEND_URL = 'http://localhost:5005'
    }

    stages {
        stage('Install Dependencies') {
            steps {
                script {
                    sh 'npm install'
                }
            }
        }

        stage('Build Backend') {
            steps {
                script {
                    sh 'npm run build:backend'
                }
            }
        }

        stage('Build Frontend') {
            steps {
                script {
                    sh 'npm run build:frontend'
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    sh 'npm test'
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    // Insert deployment commands here (e.g., Docker, Kubernetes)
                }
            }
        }
    }
}
